<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="proyectofinal_appmoviles.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:proyectofinal_appmoviles.Views"
    xmlns:public="clr-namespace:proyectofinal_appmoviles.Views.Public"
    xmlns:private="clr-namespace:proyectofinal_appmoviles.Views.Private"
    Shell.FlyoutBehavior="Flyout"
    Title="proyectofinal_appmoviles">

    <FlyoutItem Title="Inicio" Icon="dotnet_bot.png">  <!-- Using dotnet_bot.png instead of home.png -->
        <ShellContent Route="inicio" ContentTemplate="{DataTemplate public:InicioPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Historia" Icon="history.png">
        <ShellContent Route="historia" ContentTemplate="{DataTemplate views:HistoriaPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Perfil" Icon="user.png">
        <ShellContent Route="perfil" ContentTemplate="{DataTemplate private:PerfilPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Ajustes" Icon="settings.png">
        <ShellContent Route="ajustes" ContentTemplate="{DataTemplate private:AjustesPage}" />
    </FlyoutItem>

</Shell>

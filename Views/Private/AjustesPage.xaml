<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:proyectofinal_appmoviles.ViewModels"
             x:Class="proyectofinal_appmoviles.Views.Private.AjustesPage"
             x:DataType="viewmodels:AjustesViewModel"
             Title="Ajustes">
    
    <StackLayout Padding="20">
        <Switch IsToggled="{Binding DarkModeEnabled}"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
        
        <Label Text="Modo Oscuro"
               FontSize="16"
               VerticalOptions="Center"
               Margin="10,0,0,0"/>
    </StackLayout>
</ContentPage>
